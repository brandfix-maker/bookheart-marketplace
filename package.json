{
  "name": "bookheart-marketplace",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "db:push": "npm run db:push --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "clean:windows": "rmdir /s /q node_modules && rmdir /s /q apps\\api\\node_modules && rmdir /s /q apps\\web\\node_modules && rmdir /s /q packages\\database\\node_modules && rmdir /s /q packages\\shared\\node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.0",
    "prettier": "^3.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9"
  },
  "packageManager": "npm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "drizzle-orm": "0.29.4"
  }
}
